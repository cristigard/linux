go to ~
create .vimrc file if not exist
add:

  #add suport in vim file for scroll(press shift when copy/paste after this option was set)
  set mouse=a

  #set background color
  set background=dark

  #se tab indentation
  set background=dark
  set softtabstop=4
  set tabstop=4
  set shiftwidth=4
  set expandtab
